@model FribergCarRentalsMVC.DTOs.BookingDto

@{
    ViewData["Title"] = "Avboka bokning";
    var carName = Model.Car != null
        ? $"{Model.Car.Brand} {Model.Car.Model}"
        : $"Bil #{Model.CarId}";
}

<h3>Är du säker på att du vill avboka?</h3>

<dl class="row">
    <dt class="col-sm-3">Bil</dt>
    <dd class="col-sm-9">@carName</dd>

    <dt class="col-sm-3">Start</dt>
    <dd class="col-sm-9">@Model.StartDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Slut</dt>
    <dd class="col-sm-9">@Model.EndDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Bekräftad</dt>
    <dd class="col-sm-9">@(Model.IsConfirmed ? "Ja" : "Nej")</dd>
</dl>

<form asp-action="DeleteBookingConfirmed" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger">Avboka</button>
    <a asp-action="MyBookings" class="btn btn-secondary ms-2">Tillbaka</a>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}