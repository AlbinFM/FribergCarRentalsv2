@model IEnumerable<FribergCarRentalsMVC.DTOs.BookingDto>

@{
    ViewData["Title"] = "Mina bokningar";
}

<div class="container mt-4">
    <h2 class="mb-4">Mina bokningar</h2>

    @if (TempData["Success"] is string msg)
    {
        <div class="alert alert-success">@msg</div>
    }

    @if (!(Model?.Any() ?? false))
    {
        <div class="alert alert-info">Du har inga bokningar ännu.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                <tr>
                    <th>Bil</th>
                    <th>Startdatum</th>
                    <th>Slutdatum</th>
                    <th>Status</th>
                    <th style="width:160px;">Åtgärder</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var b in Model!)
                {
                    var carName = b.Car != null
                        ? $"{b.Car.Brand} {b.Car.Model}"
                        : $"Bil #{b.CarId}";

                    <tr>
                        <td>@carName</td>
                        <td>@b.StartDate.ToShortDateString()</td>
                        <td>@b.EndDate.ToShortDateString()</td>
                        <td>@(b.IsConfirmed ? "Bekräftad" : "Obekräftad")</td>
                        <td>
                            <a asp-controller="Cars"
                               asp-action="CarDetails"
                               asp-route-id="@b.CarId"
                               class="btn btn-outline-primary btn-sm me-2">
                                Visa bil
                            </a>
                            
                            @if (b.StartDate.Date > DateTime.Today)
                            {
                                <a asp-controller="Booking"
                                   asp-action="DeleteBooking"
                                    asp-route-id="@b.Id"
                                    class="btn btn-danger btn-sm">
                                    Avboka
                                </a>
                            }
                            else
                            {
                                <span class="text-muted">Kan inte avbokas</span>
                            }
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
