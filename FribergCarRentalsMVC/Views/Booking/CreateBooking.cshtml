@model FribergCarRentalsMVC.Models.Booking

@{
    ViewData["Title"] = "Skapa Bokning";
}

<div class="container mt-4">
    <h2 class="mb-4">Skapa Bokning</h2>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CreateBooking" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="CarId" class="form-label">Bil</label>
                    <select asp-for="CarId" class="form-select" asp-items="ViewBag.CarId" style="pointer-events:none; background:#e9ecef;"></select>
                    <input type="hidden" asp-for="CarId" />
                    <span asp-validation-for="CarId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="CustomerId" class="form-label">Kund</label>
                    <input type="hidden" asp-for="CustomerId" />
                    <input type="text" class="form-control" value="@Model.Customer.FullName" disabled />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="StartDate" class="form-label">Startdatum</label>
                    <input asp-for="StartDate" class="form-control" type="date" id="startDate" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="EndDate" class="form-label">Slutdatum</label>
                    <input asp-for="EndDate" class="form-control" type="date" id="endDate" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="d-md-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary w-50">Skapa bokning</button>
                    <a asp-controller="Cars" asp-action="Index" class="btn btn-secondary w-50">Tillbaka</a>
                </div>
            </form>
            
        </div>
    </div>
</div>

<script>
    window.onload = function() {
        var today = new Date().toISOString().split('T')[0];
        document.getElementById('startDate').value = today;
        document.getElementById('endDate').value = today;
    };
</script>
