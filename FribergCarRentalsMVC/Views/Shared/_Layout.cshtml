<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Friberg Car Rentals</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
            color: #23272b;
        }

        .navbar, .footer, .card, .modal-content {
            background-color: #fff !important;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        }

        .navbar {
            min-height: 80px;
            padding-top: 1rem;
            padding-bottom: 1rem;
        }

        .navbar-brand, .nav-link, .footer, .card-title, .card-text, .modal-title {
            color: #23272b !important;
            font-size: 1.35rem;
        }

        .navbar-brand {
            font-size: 2rem !important;
        }

            .navbar-brand img {
                background: #fff;
                border-radius: 6px;
                border: 2px solid #e0e0e0;
                box-shadow: 0 1px 4px rgba(0,0,0,0.07);
                height: 56px !important;
                margin-right: 16px;
            }

        .navbar .nav-link.active, .navbar .nav-link:focus, .navbar .nav-link:hover {
            color: #ff9800 !important;
        }

        .btn-primary {
            background-color: #ff9800;
            border-color: #ff9800;
        }

            .btn-primary:hover {
                background-color: #e65100;
                border-color: #e65100;
            }
    </style>
</head>
<body>
@{
    var rolesCsv   = Context.Session.GetString("Roles") ?? "";
    var isAdmin    = rolesCsv.Split(',', StringSplitOptions.RemoveEmptyEntries | StringSplitOptions.TrimEntries)
                             .Any(r => r.Equals("Admin", StringComparison.OrdinalIgnoreCase));
    var customerId = Context.Session.GetInt32("CustomerId");
    var isLoggedIn = isAdmin || customerId != null;
}
<header>
    <nav class="navbar navbar-expand-lg navbar-light border-bottom shadow-sm mb-3">
        <div class="container">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/FribergCarRentals.png" alt="Friberg Car Rentals Logo" style="height:40px; margin-right:10px;" />
                Friberg Car Rentals
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="mainNav" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Hem</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Cars" asp-action="Index">Tillgängliga bilar</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    @if (!isLoggedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Logga in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="AdminAuth" asp-action="AdminLogin">Logga in som admin</a>
                        </li>
                    }
                    else if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Admin" asp-action="Dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="AdminAuth" asp-action="AdminLogout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-link nav-link text-dark" type="submit">Logga ut</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Booking" asp-action="MyBookings">Mina bokningar</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-link nav-link text-dark" type="submit">Logga ut</button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted mt-4">
    <div class="container">
        &copy; @DateTime.Now.Year - Friberg Car Rentals -
        <a asp-controller="Home" asp-action="Privacy" class="text-dark">Privacy</a>
    </div>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>