@{
    ViewData["Title"] = "Admin Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <h2 class="mb-4">Admin Login</h2>

        @if (ViewBag.LoginFailed == true)
        {
            <div class="alert alert-danger">Inloggning misslyckades. Var vänlig försök igen.</div>
        }

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="Email" class="form-label">E-post</label>
                <input type="email" class="form-control" id="Email" name="email" placeholder="Ange din e-post" required>
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="form-label">Lösenord</label>
                <input type="password" class="form-control" id="Password" name="password" placeholder="Ange ditt lösenord" required>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Logga in</button>
            </div>
        </form>
    </div>
</div>