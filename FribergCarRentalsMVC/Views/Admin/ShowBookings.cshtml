@model IEnumerable<FribergCarRentalsMVC.DTOs.BookingsAllDto.BookingDto>
@{
    ViewData["Title"] = "Bokningar";
}

<div class="container mt-4">
    <h1 class="mb-4">Bokningar</h1>

    <table class="table">
        <thead>
        <tr>
            <th>CustomerId</th>
            <th>CarId</th>
            <th>Startdatum</th>
            <th>Slutdatum</th>
            <th>Bekräftad</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.CustomerId</td>
                <td>@b.CarId</td>
                <td>@b.StartDate.ToShortDateString()</td>
                <td>@b.EndDate.ToShortDateString()</td>
                <td>@(b.IsConfirmed ? "Ja" : "Nej")</td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-end" style="margin-right:15vw; margin-bottom:5px;">
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">Tillbaka till dashboard</a>
    </div>
</div>