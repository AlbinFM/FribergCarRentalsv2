@model IEnumerable<FribergCarRentalsMVC.DTOs.CustomersAllDto.CustomerDto>
@{
    ViewData["Title"] = "Kunder";
}

<h1>Kunder</h1>

@if (TempData["AlertMessage"] != null)
{
    var alertType = TempData["AlertType"] as string ?? "danger";
    <div class="alert alert-@alertType alert-dismissible fade show" role="alert">
        @TempData["AlertMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Stäng"></button>
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Namn</th>
            <th>E-post</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FullName</td>
                <td>@c.Email</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="Admin" asp-action="CustomerDetails" asp-route-id="@c.Id" class="btn btn-info me-1">Detaljer</a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@c.Id">
                            Ta bort
                        </button>
                    </div>

                    <div class="modal fade" id="deleteModal-@c.Id" tabindex="-1" aria-labelledby="deleteModalLabel-@c.Id" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="deleteModalLabel-@c.Id">Bekräfta borttagning</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    Är du säker på att du vill ta bort <strong>@c.FullName</strong>?
                                </div>
                                <div class="modal-footer">
                                    <form asp-controller="Admin" asp-action="DeleteCustomerConfirmed" asp-route-id="@c.Id" method="post">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-danger">Ja, ta bort</button>
                                    </form>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Avbryt</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end" style="margin-right:13vw; margin-bottom:5px;">
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">Tillbaka till dashboard</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
