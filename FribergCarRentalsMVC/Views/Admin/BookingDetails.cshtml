@model FribergCarRentalsMVC.DTOs.BookingDto

@{
    ViewData["Title"] = "Bokningsdetaljer";
}

<div class="container mt-4">
    <h1>Bokningsdetaljer</h1>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Bokningsinformation</h5>
            <p class="card-text"><strong>KundId:</strong> @Model.CustomerId</p>
            <p class="card-text"><strong>BilId:</strong> @Model.CarId</p>
            <p class="card-text"><strong>Startdatum:</strong> @Model.StartDate.ToShortDateString()</p>
            <p class="card-text"><strong>Slutdatum:</strong> @Model.EndDate.ToShortDateString()</p>
            <p class="card-text"><strong>Bekräftad:</strong> @(Model.IsConfirmed ? "Ja" : "Nej")</p>
        </div>
    </div>

    <a asp-controller="Admin" asp-action="ShowBookings" class="btn btn-primary mt-3">Tillbaka till bokningar</a>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}